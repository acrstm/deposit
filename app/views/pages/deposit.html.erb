<div class="bg-image d-flex justify-content-center align-items-center"
  style="
    background-image: url('https://images.unsplash.com/photo-1514716406192-98539572a586?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1469&q=80');
    height: 100vh;
    width: 100vw;
    object-fit: cover;
    position: flex;
    z-index: -1;
  ">

    <div class="container padding: 0">
      <div class="banner">
        <h1>Bottle-me <strong>connecting people</strong> to <strong>help each other</strong>!</h1>
        <p><span data-controller="typed-js"></span></p>
        <a class="btn btn-ghost" href="#">Sign up</a>

        <% if user_signed_in? %>
          <div class="p-2"><%= link_to "Discover provider",   new_user_booking_path(current_user) , class:"btn btn-ghost"%></div>

        <% else %>
          <div class="p-2"><%= link_to "Discover provider",  new_user_registration_path(:user_type => "provider") , class:"btn btn-ghost"%></div>
          <div class="p-2">  <%= link_to "Discover collector",  new_user_registration_path(:user_type => "collector") , class:"btn btn-ghost"%></div>
        <% end %>

      </div>
    </div>
  </div>
